# directories
alias applicationsupport='open $HOME/Library/Application\ Support'
alias ankimedia='open $HOME/Library/Application\ Support/Anki2/tebby24/collection.media'

# dotfiles
alias df='git --git-dir=$HOME/dotfiles --work-tree=$HOME'
alias dfacp='df add -u && df commit -m "Update dotfiles" && df push'

# configuration files
alias zshconfig='nvim $HOME/.zshrc'
alias yabaiconfig='nvim $HOME/.config/yabai/yabairc'
alias skhdconfig='nvim $HOME/.config/skhd/skhdrc'
alias tmuxconfig='nvim $HOME/.config/tmux/tmux.conf'
alias nvimconfig='nvim $HOME/.config/nvim'

# chinese
alias reader='$HOME/scripts/chinese/reader/reader.sh'
alias chineseaudio='python3 $HOME/scripts/chinese/anki/savewordaudios.py'

# nvim

# pip
alias pip="pip3"

# fzf
alias sd="cd ~/development && cd \$(find * -type d | fzf)"

